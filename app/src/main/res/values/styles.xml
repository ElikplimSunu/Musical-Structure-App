<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="nowPlayingCardView" parent="CardView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="cardCornerRadius">@dimen/image_width</item>
	</style>

	<style name="nowPlayingSongImage">
		<item name="android:layout_width">@dimen/nowplaying_song_image</item>
		<item name="android:layout_height">@dimen/nowplaying_song_image</item>
	</style>

	<style name="SongTextView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/song_text_size</item>
	</style>

	<style name="ArtistTextView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/album_text_size</item>
	</style>


	<style name="AlbumTextView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">@dimen/song_text_size</item>
	</style>

	<style name="NowPlayingView">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:orientation">vertical</item>

	</style>

	<style name="NowPlayingIcons">
		<item name="android:layout_height">@dimen/listitem_image</item>
		<item name="android:layout_width">@dimen/listitem_image</item>
	</style>

	<style name="GridView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">@dimen/gridview_margin</item>

	</style>


</resources>
